<%- options.each do |option| -%>
<%- full_path = [path, option.name].compact.join(".") -%>
<%- if !option.options.nil? -%>
<%= "#" * depth %> <%= full_path %>.*

<%= options_sections(option.options.sort, depth: depth + 1, path: full_path) %>

<%- else -%>
<%= "#" * depth %> <%= full_path %>

<%= option_tags(option).collect { |tag| "`#{tag}`" }.join(" ") %>

<%= option_description(option) %>

<%- end -%>
<%- end -%>