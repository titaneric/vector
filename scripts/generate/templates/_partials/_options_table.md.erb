<% if opts[:header] -%>
| Key  | Type  | Description |
|:-----|:-----:|:------------|
<% end -%>
<% table.grouped.each do |title, options| -%>
<% if opts[:titles] -%>
| <%= title %> | | |
<% end -%>
<% options.each do |option| -%>
<%- name = opts[:path] ? "#{opts[:path]}.#{option.name}" : option.name -%>
<% if !option.options.nil? -%>
<%= options_table(option.options, header: false, path: name, titles: false) %>
<% else -%>
<%- tags = table.option_tags(option) -%>
| `<%= name %>` | `<%= option.type %>` | <%= option.description %><% if tags.any? %><br /><%= tags(tags) %><% end %> |
<% end -%>
<% end -%>
<% end -%>